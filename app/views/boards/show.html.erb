<div>
  <h1>
    Board #<%= @the_board.name %> details
  </h1>

    

    
  
</div>

<hr>
<h2>Add a new post</h2>
<form action="/inser_post" method="post">
  <div>
  <label for="title_field">Title</label>
  <input id="title_field" type="text" name="title">
  </div>
  <div>
  <label for="body_field">Body</label>
  <textarea id="body_field" name="body" cols="30" rows="10"></textarea>
   </div>
  <div>
  <label for="expire_field">Expires on</label>
  <input id="expire_field" type="date" name="expire">
   </div>

  
  <input id="board_id_field" type="hidden" name="expire" value="<%= @the_board.id%>">
 

   <button>
    Add post
   </button>
</form>

<hr>

<h2> Active posts</h2>
<% mathcing_posts = Post.where({ :board_id => @the_board.id}).order({ :expires_on => :asc })%>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Posted on</th>
    <th>Expires on</th>
  </tr>

  <% mathcing_posts.each do |a_post| %>
  <tr>
    <td><%= a_post.title %></td>
    <td><%= a_post.body %></td>
    <td><%= a_post.created_at.strftime("%b %e, %Y") %></td>
    <td><%= a_post.expires_on.strftime("%b %e, %Y") %></td>
  </tr>
  <%end%>
</table>
